{% extends '::layout.html.twig' %}

{% block content %}
<h1>{% trans %}Notice overview{% endtrans %}</h1>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="row">
    	<div class="col-md-12">
            <a href="{{path('createNotice')}}" class="btn btn-primary">{{ 'Add notice'|trans }}</a>
    	</div>
    </div>
    {% endif %}

    <div class="row">
    	<div class="col-md-12">
    		<table id="adminNoticeOverview" class="table table-striped">
			 	<thead>
                    <tr>
			 		<th>#</th>
                    <th>{{ 'Title' | trans }}</th>
                    <th>{{ 'Creation date' | trans }}</th>
                    <th class="span1">{{ 'Message'|trans }}</th>
			 		<th></th>
			 		<th></th>
                    </tr>
			 	</thead>
			 	<tbody>
			 		{% for notice in notices%}
			 		<tr>
			 			<td>{{ notice.id }}</td>
			 			<td>{{ notice.title }}</td>
			 			<td>{{ notice.creationDate|date("d/m/Y h:i") }}</td>
			 			<td>{{ notice.message }}</td>
			 			<td><a href="{{path('updateNotice', {id:notice.id})}}" class="btn
                                btn-link">{{ 'Update'|trans }}</a></td>
			 			<td><a href="{{path('removeNotice', {id:notice.id})}}" class="btn
                                btn-danger">{{ 'Remove'|trans }}</a></td>
			 		</tr>
					{% endfor %}
			 	</tbody>
			</table>
		</div>
	</div>
{% endblock %}
