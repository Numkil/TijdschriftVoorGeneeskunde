{% extends '::layout.html.twig' %}

{% block content %}
    <h1>Notice overview</h1>

    {{ pagination.getTotalItemCount }}

    <div class="row">
    {% for notice in pagination %}
    	<div class="col-md-12">
		    <div class="notice-panel-container">
			    <div class="notice-panel">
					<div class="notice-panel-heading">
						<div class="notice-panel-title">
							{{ notice.title }}
						</div>
						<div class="notice-panel-date">
							<span class="glyphicon glyphicon-calendar"></span>
							{{ notice.creationDate|date("d/m/Y h:i") }}
						</div>
					</div>
					<div class="notice-panel-body">
						{{ notice.message }}
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
	</div>

	<div class="pagination">
	    {{ knp_pagination_render(pagination) }}
	</div>

{% endblock %}
