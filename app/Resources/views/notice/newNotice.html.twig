{% extends '::layout.html.twig' %}

{% block content %}
    <h1>New Notice</h1>
    {{ form_start(notice) }}
    	{{ form_errors(notice) }}
    <div class="form-group">
        <div class="col-sm-8">
            {{ form_label(notice.title) }}
            {{ form_widget(notice.title, { 'attr' : { 'class': 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-8">
            {{ form_label(notice.message) }}
            {{ form_widget(notice.message, { 'attr' : { 'class': 'form-control' } }) }}
        </div>
    </div>

            <a href="{{path('adminOverview')}}" class="btn btn-primary">Cancel</a>

            {{form_widget(notice.save, { 'attr': {'class': 'btn btn-primary'}})}}

            {{ form_rest(notice) }}

    {{ form_end(notice) }}
{% endblock %}
	