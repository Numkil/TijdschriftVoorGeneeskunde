{% extends '::layout.html.twig' %}

{% block content %}

<div class="col-sm-12">
    <div class="jumbotron">
        <h1>{% trans %}Update System{% endtrans %}</h1>
        {{ form_start(form) }}
            {% for child in form.children %}
                {% if child.vars.errors is defined and child.vars.errors|length%}
                <div class="alert alert-block alert-danger">
                    <a class="close" data-dismiss="alert">Ã—</a>
                    {{ form_errors(child) }}
                </div>
                {% endif %}
            {% endfor %}
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-6">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, { 'attr' : { 'class': 'form-control' } }) }}
                            {{ form_label(form.street) }}
                            {{ form_widget(form.street, { 'attr' : { 'class': 'form-control' } }) }}
                            {{ form_label(form.municipality) }}
                            {{form_widget(form.municipality, { 'attr' : { 'class': 'form-control' } }) }}
                            {{ form_label(form.postalCode) }}
                            {{ form_widget(form.postalCode, { 'attr' : { 'class': 'form-control' } }) }}
                            {{ form_label(form.iban) }}
                            {{ form_widget(form.iban, { 'attr' : { 'class': 'form-control' } }) }}
                            {{ form_label(form.bic) }}
                            {{ form_widget(form.bic, { 'attr' : { 'class': 'form-control' } }) }}
                    </div>
                </div>
            </div>

            {{form_widget(form.save, { 'attr': {'class': 'btn btn-primary'}})}}
            <a href="{{path('homepage')}}" class="btn btn-danger">{{ 'Cancel'|trans }}</a>

            {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
