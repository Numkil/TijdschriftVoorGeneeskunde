{% trans_default_domain 'FOSUserBundle' %}
<div class="col-sm-12">
    <div class="jumbotron">
        <h1>Change password</h1>
        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST"
            class="form-horizontal">

            {% for child in form.children %}
                {% if child.vars.errors is defined and child.vars.errors|length%}
                <div class="alert alert-block alert-danger">
                    <a class="close" data-dismiss="alert">Ã—</a>
                    {{ form_errors(child) }}
                </div>
                {% endif %}
            {% endfor %}

            <div class="form-group">
                <label for="currentpassword" class="col-sm-2 control-label">{{
                    form_label(form.current_password) }}</label>
                <div class="row">   
                    <div class="col-sm-4">
                        {{ form_widget(form.current_password, { 'attr' : { 'class': 'form-control' } }) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                {% for passwordField in form.plainPassword %}
                <label for="password" class="col-sm-2 control-label">{{ form_label(passwordField) }}</label>
                
                <div class="row">
                    <div class="col-sm-4">
                        {{ form_widget(passwordField, { 'attr' : { 'class': 'form-control' } }) }}
                    </div>
                    <div class="col-sm-8">
                    
                    </div>
                </div>
                {% endfor %}
            </div>

            {{ form_rest(form) }}
            <div class="row">
                <div class="col-sm-8">
                    
                    </div>
                <div class="col-sm-4">
                    <a href="{{path('fos_user_profile_show')}}" class="btn btn-danger">{{ 'Cancel'|trans }}</a>
                    <button type="submit" class="btn btn-success"> {{ 'change_password.submit'|trans }} </button>
                </div>
            </div>
        </form>
    </div>
</div>