<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST"
    class="form-horizontal">

    {% for child in form.children %}
        {% if child.vars.errors is defined and child.vars.errors|length%}
        <div class="alert alert-block alert-danger">
            <a class="close" data-dismiss="alert">Ã—</a>
            {{ form_errors(child) }}
        </div>
        {% endif %}
    {% endfor %}

    <div class="form-group">
        <label for="currentpassword" class="col-sm-2 control-label">{{
            form_label(form.current_password) }}</label>
        <div class="col-sm-8">
            {{ form_widget(form.current_password, { 'attr' : { 'class': 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group">
        {% for passwordField in form.plainPassword %}
        <label for="password" class="col-sm-2 control-label">{{ form_label(passwordField) }}</label>
        <div class="col-sm-4">
            {{ form_widget(passwordField, { 'attr' : { 'class': 'form-control' } }) }}
        </div>
        {% endfor %}
    </div>

    {{ form_rest(form) }}

    <div>
        <button type="submit" class="btn btn-danger"> {{ 'change_password.submit'|trans }} </button>
        <a href="{{path('fos_user_profile_show')}}" class="btn btn-danger">{{ 'Cancel'|trans }}</a>
    </div>
</form>

